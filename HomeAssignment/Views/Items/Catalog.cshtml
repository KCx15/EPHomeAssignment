@model IEnumerable<HomeAssignment.Models.IItemValidating>
@using HomeAssignment.Models

@{
    ViewData["Title"] = "Catalog";
    var mode = (string)(ViewBag.Mode ?? "restaurants");
    int? restaurantId = ViewBag.RestaurantId as int?;
}

<h2>Catalog</h2>

<div class="mb-3">
    <a asp-controller="Items"
       asp-action="Catalog"
       asp-route-mode="restaurants"
       class="btn btn-outline-primary me-2">
        Restaurants
    </a>

    @if (restaurantId.HasValue)
    {
        <a asp-controller="Items"
           asp-action="Catalog"
           asp-route-mode="menu"
           asp-route-restaurantId="@restaurantId"
           class="btn btn-outline-secondary">
            Menu Items for Restaurant @restaurantId
        </a>
    }
</div>

@if (mode == "restaurants")
{
    <p>Showing approved restaurants.</p>

    var restaurants = Model.OfType<Restaurant>().ToList();

    if (!restaurants.Any())
    {
        <div class="alert alert-info">No approved restaurants available.</div>
    }
    else
    {
        <div class="row">
            @foreach (var item in restaurants)
            {
                <div class="col-md-4 mb-3">
                    @await Html.PartialAsync(item.GetCardPartial(), item)
                </div>
            }
        </div>
    }
}
else
{
    <p>Showing approved menu items.</p>

    var menuItems = Model.OfType<MenuItem>().ToList();

    if (!menuItems.Any())
    {
        <div class="alert alert-info">
            No approved menu items found for this restaurant.
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th style="width: 90px;">Image</th>
                    <th>Title</th>
                    <th style="width: 140px;">Price</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in menuItems)
                {
                    @await Html.PartialAsync(item.GetCardPartial(), item)
                }
            </tbody>
        </table>
    }
}
