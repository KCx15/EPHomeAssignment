@{
    ViewData["Title"] = "Home";
    var userEmail = Context.Session.GetString("UserEmail");
}

<div class="text-center mt-5">
    <h1>Welcome to HomeAssignment</h1>
    <p>Your restaurant catalog and bulk import app.</p>

    @if (string.IsNullOrEmpty(userEmail))
    {
        <div class="mt-4">
            <a class="btn btn-primary me-2" href="/Auth/Login">Login</a>
            <a class="btn btn-success" href="/Auth/Register">Register</a>
        </div>
    }
    else
    {
        <div class="mt-4">
            <span class="me-3">Hello, @userEmail!</span>
            <a class="btn btn-danger" href="/Auth/Logout">Logout</a>
        </div>
    }
</div>
