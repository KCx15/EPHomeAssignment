@model IEnumerable<HomeAssignment.Models.MenuItem>

<h2 class="mb-3">Pending Menu Items</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No pending menu items.</div>
}
else
{
    <form method="post" asp-controller="Verification" asp-action="Approve">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th style="width:60px;">
                        <input type="checkbox" id="selectAllMenu" />

                    </th>
                    <th>Item</th>
                    <th style="width:160px;">Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="ids" value="@m.Id" class="itemCheck" />
                        </td>
                        <td class="fw-semibold">@m.Title</td>
                        <td>@m.Price.ToString("0.00") @(string.IsNullOrWhiteSpace(m.Currency) ? "" : m.Currency)</td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-success">
            Approve Selected
        </button>
    </form>

    <script>
               document.getElementById("selectAllMenu").addEventListener("change", function () {
            document.querySelectorAll(".itemCheck").forEach(cb => cb.checked = this.checked);
        });

    </script>
}
