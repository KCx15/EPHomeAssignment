@model HomeAssignment.Models.Restaurant

<div class="card h-100 shadow-sm">
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name" style="height: 180px; object-fit: cover;" />
    }

    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>

        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <p class="card-text text-muted mb-2">@Model.Description</p>
        }

        <div class="small text-muted">
            @if (!string.IsNullOrWhiteSpace(Model.Address))
            {
                <div><strong>Address:</strong> @Model.Address</div>
            }
            @if (!string.IsNullOrWhiteSpace(Model.Phone))
            {
                <div><strong>Phone:</strong> @Model.Phone</div>
            }
        </div>

        <div class="mt-3 d-flex justify-content-between align-items-center">
            <span class="badge text-bg-secondary">@Model.Status</span>

            <a class="btn btn-primary btn-sm"
               asp-controller="Items"
               asp-action="Catalog"
               asp-route-mode="menu"
               asp-route-restaurantId="@Model.Id">
                View Menu
            </a>
        </div>
    </div>
</div>
