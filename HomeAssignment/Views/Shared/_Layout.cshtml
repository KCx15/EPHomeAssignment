@inject IConfiguration Config
@{
    var email = Context.Session.GetString("UserEmail");
    var adminEmail = Config["SiteAdminEmail"];
    var isLoggedIn = !string.IsNullOrEmpty(email);
    var isAdmin = isLoggedIn && email.Equals(adminEmail, StringComparison.OrdinalIgnoreCase);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HomeAssignment</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">HomeAssignment</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Items" asp-action="Catalog">Catalog</a>
                    </li>

                    @if (isLoggedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="BulkImport" asp-action="Index">Bulk Import</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Verification" asp-action="Index">
                                @(isAdmin ? "Admin Verification" : "Owner Verification")
                            </a>
                        </li>
                    }
                </ul>

                <div class="d-flex align-items-center gap-2">
                    @if (!isLoggedIn)
                    {
                        <a class="btn btn-outline-light btn-sm" asp-controller="Auth" asp-action="Login">Login</a>
                        <a class="btn btn-warning btn-sm" asp-controller="Auth" asp-action="Register">Register</a>
                    }
                    else
                    {
                        <span class="badge rounded-pill text-bg-secondary">
                            @email
                        </span>

                        @if (isAdmin)
                        {
                            <span class="badge rounded-pill text-bg-danger">Admin</span>
                        }

                        <a class="btn btn-outline-light btn-sm" asp-controller="Auth" asp-action="Logout">Logout</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="border-top py-3 bg-white">
        <div class="container d-flex justify-content-between align-items-center">
            <span class="text-muted small">&copy; 2025 HomeAssignment</span>
            <span class="text-muted small">Bulk Import • Verification • Catalog</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
